datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Player {
  userId    String   @id
  name      String
  x         Int
  y         Int
  score     Int
  Item      Json?
  side      String
  isPlaying Boolean
  startedAt DateTime
}

model Enemy {
  enemyId    String   @id
  direction  Json
  createdAt  DateTime
  createdPos Json
  type       Int
}

model Bullet {
  bulletId   String   @id
  direction  Json
  createdAt  DateTime
  createdPos Json
  side       String
  shooterId  String
}
