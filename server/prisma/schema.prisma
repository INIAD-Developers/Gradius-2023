datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Game {
  id            String   @id
  createdAt     DateTime
  displayNumber Int
  Players       Player[]
  Enemies       Enemy[]
  Bullets       Bullet[]
}

model Player {
  id        String   @id
  name      String
  createdAt DateTime
  position  Json
  health    Int
  score     Int
  team      String
  Game      Game     @relation(fields: [gameId], references: [id])
  gameId    String
}

model Enemy {
  id              String   @id
  createdAt       DateTime
  createdPosition Json
  type            Int
  Game            Game     @relation(fields: [gameId], references: [id])
  gameId          String
}

model Bullet {
  id              String   @id
  createdAt       DateTime
  createdPosition Json
  direction       Float
  type            Int
  playerId        String?
  Game            Game     @relation(fields: [gameId], references: [id])
  gameId          String
}
