datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Game {
  id            String   @id
  createdAt     DateTime
  displayNumber Int
}

model Player {
  id        String   @id
  name      String
  createdAt DateTime
  position  Json
  health    Int
  score     Int
  team      String
}

model Enemy {
  id              String    @id
  createdAt       DateTime
  createdPosition Json
  type            Int
  deletedAt       DateTime?
}

model Bullet {
  id              String   @id
  createdAt       DateTime
  createdPosition Json
  direction       Float
  type            Int
  playerId        String?
}
